<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <display-name>Home Appliances SRO</display-name>

    <!-- Configuración del servlet ClienteServlet -->
    <servlet>
        <servlet-name>ClienteServlet</servlet-name>
        <servlet-class>servlets.ClienteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClienteServlet</servlet-name>
        <url-pattern>/ClienteServlet</url-pattern>
    </servlet-mapping>

    <!-- Configuración del servlet PedidoServlet -->
    <servlet>
        <servlet-name>PedidoServlet</servlet-name>
        <servlet-class>servlets.PedidoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PedidoServlet</servlet-name>
        <url-pattern>/PedidoServlet</url-pattern>
    </servlet-mapping>

    <!-- Configuración del servlet ProductoServlet -->
    <servlet>
        <servlet-name>ProductoServlet</servlet-name>
        <servlet-class>servlets.ProductoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductoServlet</servlet-name>
        <url-pattern>/ProductoServlet</url-pattern>
    </servlet-mapping>

</web-app>
